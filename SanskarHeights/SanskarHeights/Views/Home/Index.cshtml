@{
    ViewBag.Title = "Sanskar Heights";
}
<div class="row">
    <div class="col-md-2" style="overflow:hidden">
        <div>
            <img src="~/Images/school.png" width="190" />
        </div>
    </div>
    <div class="col-md-7">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Images/a.png" alt="Los Angeles" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/Images/b.png" alt="Chicago" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/Images/c.png" alt="New york" style="width:100%;">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="col-md-3" style="overflow:hidden">
        <div style="text-align:center">
            <div class="glow" style="background-color:darkblue;width:469px;overflow:hidden">
                <h2 style="color:white"><strong>News And Events</strong></h2>
            </div>
            <div style="background-color:lightgoldenrodyellow;width:369px;">
                <h4><a href="~/Images/a.png" style="color:black"> Advertisement for teachers</a></h4>
            </div>
            <div style="background-color:lightcyan;width:369px;">
                <strong>
                    <i class="glyphicon glyphicon-calendar"></i>
                    2nd Jan 2020
                </strong>
                <h4>Admission open for the session 2020-21 for more details call:- +91-8352948481, 7018729002</h4>
            </div>

        </div>
    </div>

</div>
<div class="row" style="margin-top:5px">
    <marquee direction="left" onmouseover="this.stop();" onmouseout="this.start();" style="background-color:lavenderblush">
    <h4><a href="">Admission Open</a></h4>
    </marquee>
</div>




